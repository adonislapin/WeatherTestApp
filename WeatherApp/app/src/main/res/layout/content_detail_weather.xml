<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="test.adonis.weatherapp.DetailWeather"
    tools:showIn="@layout/activity_detail_weather">


    <TextView
        android:id="@+id/full_name_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="50sp"
        android:transitionName="country"/>

    <ImageView
        android:id="@+id/weather_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/full_name_country"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:transitionName="weather_img"/>


</RelativeLayout>
